<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trigonometry"
            android:textSize="24sp"
            android:textColor="#BB86FC"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="#1F1F1F"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAngle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter angle (degrees)"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Row 1: sin, cos, tan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sinButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sin θ"
                app:cornerRadius="12dp"
                app:backgroundTint="#03DAC6"
                android:textColor="#000000"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cosButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cos θ"
                app:cornerRadius="12dp"
                app:backgroundTint="#03DAC6"
                android:textColor="#000000"
                android:layout_marginHorizontal="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tanButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="tan θ"
                app:cornerRadius="12dp"
                app:backgroundTint="#03DAC6"
                android:textColor="#000000"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Row 2: sec, cosec, cot -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/secButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sec θ"
                app:cornerRadius="12dp"
                app:backgroundTint="#FFB74D"
                android:textColor="#000000"
                android:layout_marginEnd="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cosecButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cosec θ"
                app:cornerRadius="12dp"
                app:backgroundTint="#FFB74D"
                android:textColor="#000000"
                android:layout_marginHorizontal="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cotButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cot θ"
                app:cornerRadius="12dp"
                app:backgroundTint="#FFB74D"
                android:textColor="#000000"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/advancedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced Steps"
            app:cornerRadius="16dp"
            app:backgroundTint="#BB86FC"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/askAiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ask AI"
            app:cornerRadius="16dp"
            app:backgroundTint="#FF0266"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>